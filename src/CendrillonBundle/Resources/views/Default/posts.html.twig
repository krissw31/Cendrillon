                        <td>{{ posts_amitie.postTitle }}</td>
                        <td>{{ posts_amitie.postContent}}</td>
                        <td><a href={{ path('post.edit',{"id":posts_amitie.id}) }}><input class="btn btn-primary " type="button" value="editer"></a></td>
                        <td><a href={{ path('post.delete',{"id":posts_amitie.id})}} ><input class="btn btn-primary" type="reset" value="Supprimer"></a></td>
                        <td><a href={{ path('post.see',{"id":posts_amitie.id}) }}><input class="btn btn-primary " type="button" value="voir"></a></td>
