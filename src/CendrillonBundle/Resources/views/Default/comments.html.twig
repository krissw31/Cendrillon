{% extends "base.html.twig" %}
 {% block body %}

<div class="container">
     <h2>Voici les commentaires pour le message:</h2>

     <p>Message post√© le {{ commentsPostDate |date('d/m/Y h:i:s') }} , par {{ commentsPostAuthor.userLogin }}:</p>
     <p>"{{ commentsPostContent }}"</p>

     <p></p>



     <div class="row my-4">
         <div class="col-lg-12 col-md-12">
             <div class="table-responsive">
                 <table class="table table-striped">
                     <thead class="bg-success">
                     <tr>
                         <th style="width:10%;">date</th>
                          <th style="width:20%;">auteur</th>

                         <th style="width: 50%;">contenu</th>
                         <th style="width: 10%;">modifier</th>
                         <th style="width: 10%;">supprimer</th>




                     </tr>
                     </thead>
                     <tbody>
                     {% for comment in commentPost %}
                         <tr>
                             <td>{{ comment.commentDate |date('d/m/Y h:i:s') }}</td>
                                    <td>{{ comment.commentAuthor.userLogin}}</td>

                             <td>{{ comment.commentContent }}</td>
                             <td><a><input class="btn btn-primary " type="button" value="editer"></a></td>
                             <td><a><input class="btn btn-primary" type="reset" value="Supprimer"></a></td>



                         </tr>
                     {% endfor %}

                     </tbody>
                 </table>
             </div>
         </div>
     </div>

{% endblock %}